// JobEscrow - Main escrow account for milestone-based payments
model JobEscrow {
  id                String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  contractorJobId   String   @unique @db.Uuid
  totalAmount       Decimal  @db.Decimal(12, 2)
  platformFee       Decimal  @db.Decimal(12, 2)
  contractorAmount  Decimal  @db.Decimal(12, 2)
  status            String   @default("pending") // pending, funded, partial, released, refunded, disputed
  stripePaymentId   String?
  fundedAt          DateTime? @db.Timestamp(6)
  createdAt         DateTime @default(now()) @db.Timestamp(6)
  updatedAt         DateTime @updatedAt
  
  contractorJob     ContractorJob @relation(fields: [contractorJobId], references: [id], onDelete: Cascade)
  milestones        JobMilestone[]
  releases          EscrowRelease[]
  disputes          EscrowDispute[]
  
  @@index([contractorJobId])
  @@index([status])
  @@index([fundedAt])
}

// JobMilestone - Individual payment milestones with verification requirements
model JobMilestone {
  id              String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  escrowId        String   @db.Uuid
  order           Int      // Milestone sequence number
  title           String
  description     String?
  amount          Decimal  @db.Decimal(12, 2)
  percentage      Int      // Percentage of total job amount
  status          String   @default("pending") // pending, in_progress, completed, released, disputed
  
  // Verification requirements
  requireGPS      Boolean  @default(false)
  requirePhotos   Boolean  @default(false)
  minPhotos       Int      @default(0)
  requireSignature Boolean @default(false)
  
  // GPS Verification data
  gpsVerified     Boolean  @default(false)
  gpsLat          Float?
  gpsLng          Float?
  gpsAddress      String?
  gpsVerifiedAt   DateTime? @db.Timestamp(6)
  
  // Photo verification data
  photosUploaded  Int      @default(0)
  photoUrls       String[] @default([])
  photoPublicIds  String[] @default([])
  
  // Digital signatures
  contractorSigned Boolean @default(false)
  contractorSignedAt DateTime? @db.Timestamp(6)
  contractorSignature String? // Base64 image or URL
  
  customerSigned  Boolean  @default(false)
  customerSignedAt DateTime? @db.Timestamp(6)
  customerSignature String? // Base64 image or URL
  
  // Completion tracking
  completedAt     DateTime? @db.Timestamp(6)
  releasedAt      DateTime? @db.Timestamp(6)
  autoReleaseAt   DateTime? @db.Timestamp(6) // Auto-release after 7 days
  
  createdAt       DateTime @default(now()) @db.Timestamp(6)
  updatedAt       DateTime @updatedAt
  
  escrow          JobEscrow @relation(fields: [escrowId], references: [id], onDelete: Cascade)
  releases        EscrowRelease[]
  
  @@index([escrowId])
  @@index([status])
  @@index([order])
  @@index([autoReleaseAt])
}

// EscrowRelease - Track fund releases from escrow to contractor
model EscrowRelease {
  id                String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  escrowId          String   @db.Uuid
  milestoneId       String?  @db.Uuid
  amount            Decimal  @db.Decimal(12, 2)
  platformFee       Decimal  @db.Decimal(12, 2)
  contractorAmount  Decimal  @db.Decimal(12, 2)
  releaseType       String   // milestone, bonus, refund, dispute_resolution, early_release
  stripeTransferId  String?
  status            String   @default("pending") // pending, processing, completed, failed
  releasedBy        String?  @db.Uuid // userId who approved release
  releasedAt        DateTime? @db.Timestamp(6)
  completedAt       DateTime? @db.Timestamp(6)
  failureReason     String?
  notes             String?
  createdAt         DateTime @default(now()) @db.Timestamp(6)
  updatedAt         DateTime @updatedAt
  
  escrow            JobEscrow @relation(fields: [escrowId], references: [id], onDelete: Cascade)
  milestone         JobMilestone? @relation(fields: [milestoneId], references: [id], onDelete: SetNull)
  
  @@index([escrowId])
  @@index([milestoneId])
  @@index([status])
  @@index([releaseType])
  @@index([releasedAt])
}

// EscrowDispute - Handle payment disputes between customer and contractor
model EscrowDispute {
  id              String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  escrowId        String   @db.Uuid
  milestoneId     String?  @db.Uuid
  filedBy         String   @db.Uuid // userId who filed dispute
  filedByRole     String   // customer, contractor
  reason          String   // not_completed, poor_quality, wrong_work, other
  description     String
  requestedAmount Decimal  @db.Decimal(12, 2)
  evidenceUrls    String[] @default([])
  evidencePublicIds String[] @default([])
  status          String   @default("open") // open, under_review, resolved, closed
  resolution      String?  // full_refund, partial_refund, release_to_contractor, split_payment
  resolutionNotes String?
  resolvedBy      String?  @db.Uuid // admin userId
  resolvedAt      DateTime? @db.Timestamp(6)
  createdAt       DateTime @default(now()) @db.Timestamp(6)
  updatedAt       DateTime @updatedAt
  
  escrow          JobEscrow @relation(fields: [escrowId], references: [id], onDelete: Cascade)
  
  @@index([escrowId])
  @@index([milestoneId])
  @@index([filedBy])
  @@index([status])
  @@index([createdAt])
}

// MilestoneTemplate - Pre-built milestone structures for quick setup
model MilestoneTemplate {
